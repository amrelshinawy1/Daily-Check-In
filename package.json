{
  "name": "daily-check-in-mvp",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "web:dev": "turbo run dev --filter=web",
    "web:build": "turbo run build --filter=web",
    "mobile:dev": "turbo run start --filter=mobile",
    "mobile:ios": "turbo run ios --filter=mobile",
    "mobile:android": "turbo run android --filter=mobile",
    "backend:dev": "turbo run dev --filter=backend",
    "backend:build": "turbo run build --filter=backend"
  },
  "devDependencies": {
    "@turbo/gen": "^1.12.4",
    "prettier": "^3.0.0",
    "turbo": "^1.12.4"
  },
  "packageManager": "pnpm@8.6.0"
}
